<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8064A2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/app_title"
        android:id="@+id/textViewTitle"
        android:gravity="center_horizontal"
        android:background="#5C4875"
        android:textColor="@android:color/white"
        android:padding="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewQuestionStatement" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginLeft="45dp"
        android:text="New RadioButton"
        android:id="@+id/radioButtonOption1" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginLeft="45dp"
        android:text="New RadioButton"
        android:id="@+id/radioButtonOption2" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginLeft="45dp"
        android:text="New RadioButton"
        android:id="@+id/radioButtonOption3" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginLeft="45dp"
        android:text="New RadioButton"
        android:id="@+id/radioButtonOption4" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginLeft="45dp"
        android:text="New RadioButton"
        android:id="@+id/radioButtonOption5" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="bottom"
            android:id="@+id/buttonPreviousQuestion" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1/5"
            android:id="@+id/textViewNbrQuestion"
            android:layout_gravity="bottom"
            android:gravity="center"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_gravity="bottom"
            android:id="@+id/buttonNextQuestion" />
    </LinearLayout>


</LinearLayout>