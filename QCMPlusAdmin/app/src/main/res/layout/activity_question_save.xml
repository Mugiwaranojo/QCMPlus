<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4BC0C6">

    <TextView
        android:text="@string/question_save_title"
        android:gravity="center"
        android:layout_width="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:layout_height="0dp"
        android:layout_weight="20"/>

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:text="@string/question_save_question"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="40"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_margin="5dp"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:id="@+id/editTextStatement" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:text="@string/question_save_option1"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="40"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_margin="5dp"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:id="@+id/editTextOption1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:text="@string/question_save_option2"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="40"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_margin="5dp"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:id="@+id/editTextOption2" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:text="@string/question_save_option3"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="40"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_margin="5dp"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:id="@+id/editTextOption3" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:text="@string/question_save_option4"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="40"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_margin="5dp"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:id="@+id/editTextOption4" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:text="@string/question_save_option5"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="40"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_margin="5dp"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:id="@+id/editTextOption5" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:id="@+id/questionSaveBtn"
            android:background="#2F7C80"
            android:text="@string/question_save_submit"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>